{
  "compilerOptions": {
    "outDir": "./public/",
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "lib": ["es2018"],
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
